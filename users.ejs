<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <title>User List</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background: linear-gradient(135deg, #1e3c72, #2a5298);
            color: white;
            text-align: center;
            margin: 0;
            padding: 0;
            display: flex;
            flex-direction: column;
            align-items: center;
            animation: fadeIn 1.5s ease-in-out;
        }

        h1 {
            font-size: 2.5em;
            margin-top: 20px;
            animation: slideIn 1s ease-in-out;
        }

        ul {
            list-style: none;
            padding: 0;
            width: 80%;
            max-width: 600px;
        }

        li {
            background: rgba(255, 255, 255, 0.2);
            padding: 15px;
            margin: 10px 0;
            border-radius: 10px;
            box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.1);
            transition: transform 0.3s ease, background 0.3s ease;
            position: relative;
            /* To position the status badge */
        }

        li:hover {
            transform: scale(1.05);
            background: rgba(255, 255, 255, 0.3);
        }

        h2 {
            margin: 0;
        }

        a {
            display: inline-block;
            background: white;
            color: #1e3c72;
            padding: 8px 15px;
            text-decoration: none;
            font-weight: bold;
            border-radius: 5px;
            margin-top: 10px;
            transition: transform 0.3s ease, background 0.3s ease;
        }

        a:hover {
            background: #f8f9fa;
            transform: scale(1.1);
        }

        .status {
            position: absolute;
            top: 10px;
            right: 10px;
            padding: 5px 10px;
            border-radius: 15px;
            font-size: 0.9em;
            font-weight: bold;
            color: white;
        }

        .active {
            background-color: #4caf50;
            /* Green for active users */
        }

        .inactive {
            background-color: #f44336;
            /* Red for inactive users */
        }

        @keyframes fadeIn {
            from {
                opacity: 0;
            }

            to {
                opacity: 1;
            }
        }

        @keyframes slideIn {
            from {
                transform: translateY(-20px);
                opacity: 0;
            }

            to {
                transform: translateY(0);
                opacity: 1;
            }
        }
    </style>
</head>

<body>
    <h1>Neural Quark Computing LLP Employee List</h1>

    <ul>
        <% users.forEach(user=> { %>
            <li>
                <h2>
                    <%= user.name %>
                </h2>
                <p>
                    <%= user.email %>
                </p>
                <p>Joined: <%= new Date(user.created_at).toLocaleString() %>
                </p>

                <!-- Show Active Status -->
                <% if (user.id===loggedInUserId) { %>
                    <span class="status active">Active</span>
                    <% } else { %>
                        <span class="status inactive">Inactive</span>
                        <% } %>

                            <a href="/users/<%= user.id %>">View</a>
            </li>
            <% }); %>
    </ul>

    <a href="/createUser">Add User</a>
    <a href="/login" class="back-btn">Back to Login</a>
</body>

</html>